@model IEnumerable<Lab2.Entities.Task_>

@{
    ViewData["Title"] = "View";
}

@*<h1>View</h1>*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BeginDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeadlineDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requirements)
            </th>
            <th>
                Responsibility
                @*@Html.DisplayNameFor(model => model.Users)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BeginDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeadlineDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Requirements)
                </td>
                <td>
                    @foreach (var user in item.Users)
                    {
                        @Html.DisplayFor(modelItem => user.FullName)<br>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

